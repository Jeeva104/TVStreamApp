<?xml version="1.0" encoding="utf-8"?>
<!--
    activity_player.xml – Full-screen video player layout.

    StyledPlayerView fills the entire screen and provides built-in controls:
    - Play/Pause button
    - Seek bar with buffering progress
    - Time display
    - Fullscreen toggle

    The ProgressBar overlay is our custom buffering indicator shown via
    PlayerActivity.playerListener while STATE_BUFFERING is active.
-->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Media3 StyledPlayerView – handles both rendering and UI controls -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:show_buffering="when_playing"
        app:use_controller="true"
        app:controller_layout_id="@layout/player_control_view"
        app:resize_mode="fit" />

    <!-- Custom buffering ProgressBar overlay – shown/hidden by PlayerActivity listener -->
    <ProgressBar
        android:id="@+id/progress_buffering"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateTint="@color/brand_color"
        android:visibility="gone" />

</FrameLayout>
