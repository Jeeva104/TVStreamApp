<?xml version="1.0" encoding="utf-8"?>
<!--
    Gradient background for the player controls overlay panel.
    Dark-to-transparent from bottom ensures controls are readable
    against any video content without blocking the video itself.
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <gradient
        android:angle="90"
        android:endColor="#00000000"
        android:startColor="#CC000000"
        android:type="linear" />
</shape>
